<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!--Usefull when the data is simple-->
    <data>

        <variable
            name="random"
            type="com.example.memej.responses.homeMememResponses.Meme_Home" />

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rel_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp">

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="@dimen/edit_meme_card_width"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:elevation="40dp"
            app:cardCornerRadius="@dimen/margins">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margins"
                    android:orientation="vertical">


                    <!--                    <androidx.recyclerview.widget.RecyclerView-->
                    <!--                        android:id="@+id/rv_user_random"-->
                    <!--                        style="@style/recylclerViewAttr" />-->


                    <!--                    <androidx.recyclerview.widget.RecyclerView-->
                    <!--                        android:id="@+id/rv_tag_random"-->
                    <!--                        style="@style/recylclerViewAttr" />-->


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/meme_templete_std_height"
                        android:layout_margin="@dimen/margins"
                        android:elevation="4dp"
                        app:cardCornerRadius="@dimen/margins">

                        <com.example.memej.textProperties.lib.ImageEditorView
                            android:id="@+id/photoViewRandom"
                            android:layout_width="@dimen/meme_templete_std_height"
                            android:layout_height="@dimen/meme_templete_std_height"
                            android:layout_gravity="center"
                            android:gravity="center" />


                    </com.google.android.material.card.MaterialCardView>

                    <!--                    <com.google.android.material.textview.MaterialTextView-->
                    <!--                        android:id="@+id/ts_random"-->
                    <!--                        style="@style/timestamp"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_gravity="end"-->
                    <!--                        android:layout_margin="@dimen/margins"-->
                    <!--                        android:text="@string/sample_timestamp" />-->

                    <!--                Style Picker-->
                    <!--                Style Picker-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margins"
                        android:elevation="@dimen/margin_20dp"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/choose_colorR"
                            style="@style/stylePick"
                            android:layout_marginStart="@dimen/margins"
                            android:text="@string/choose_color" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/colorIndicatorR"
                            android:layout_width="@dimen/margin_20dp"
                            android:layout_height="@dimen/margin_20dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="12dp"
                            android:elevation="@dimen/margin_20dp"
                            app:cardBackgroundColor="@color/black"
                            app:cornerRadius="@dimen/margin_20dp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/choose_fontR"
                            style="@style/stylePick"
                            android:text="@string/choose_font" />


                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/choose_sizeR"
                            style="@style/stylePick"
                            android:text="@string/size" />


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margins"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/lineAddedEt"
                            android:layout_width="@dimen/add_line"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margins"
                            android:layout_marginTop="4dp"
                            android:hint="@string/add_a_line"
                            android:maxLines="4"
                            android:minLines="1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/send_post_edit"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="end"
                            android:background="@drawable/ic_send"
                            android:enabled="false"
                            app:layout_constraintEnd_toEndOf="parent" />


                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_insertedTags"
                        style="@style/recylclerViewAttr"
                        tools:listitem="@layout/layout_tag" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <AutoCompleteTextView
                            android:id="@+id/auto_completeTag"
                            android:layout_width="@dimen/add_line"
                            android:layout_height="@dimen/boxHt"
                            android:layout_marginStart="@dimen/margins"
                            android:layout_marginTop="@dimen/margins"
                            android:layout_marginBottom="16dp"
                            android:hint="@string/add_a_tag" />


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tag_edit"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="end"
                            android:background="@drawable/ic_check_black_24dp"
                            android:enabled="false"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </RelativeLayout>

                </LinearLayout>
            </ScrollView>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>