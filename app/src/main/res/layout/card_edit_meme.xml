<?xml version="1.0" encoding="utf-8"?>


<!--create overlay/ get such an image from the internet-->
<!--The meme template will have data binding acroos it-->
<!--The card will be clickable holding the image-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margins"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margins"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_usersListPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal" />

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/post_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margins"
            android:text="@string/memetag"
            android:textSize="@dimen/text_size" />

        <com.google.android.material.card.MaterialCardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/meme_templete_std_height"
            android:elevation="4dp"
            app:cardCornerRadius="@dimen/margins">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/meme_templete_std_height">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/cv_editMemePost"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/meme_templete_std_height"
                    android:layout_centerInParent="true"
                    android:src="@drawable/test_image" />


            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="end"
            android:layout_margin="@dimen/margins"
            android:elevation="4dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="30dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/send_post_edit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_send" />


        </androidx.cardview.widget.CardView>

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/addMemeTagEditPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margins"
            android:hint="@string/add_a_tag" />


    </LinearLayout>
</androidx.cardview.widget.CardView>
