<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--Usefull when the data is simple-->
    <data>

        <variable
            name="random"
            type="com.example.memej.responses.homeMememResponses.Meme_Home" />

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rel_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp">

        <!--This is the standard Card for random-->

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/edit_meme_card_width"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:elevation="40dp"
            app:cardCornerRadius="@dimen/margins">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margins"
                    android:orientation="vertical">


                    <!--                    <com.google.android.material.textview.MaterialTextView-->
                    <!--                        android:id="@+id/userPost_exp"-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:maxLines="4"-->
                    <!--                        android:text="@string/users" />-->


                    <!--                    <com.google.android.material.textview.MaterialTextView-->
                    <!--                        android:id="@+id/tagPost_exp"-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_marginTop="@dimen/margins"-->
                    <!--                        android:layout_marginBottom="@dimen/margins"-->
                    <!--                        android:text="@string/memetag"-->
                    <!--                        android:textSize="@dimen/text_size" />-->

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/meme_templete_std_height"
                        android:layout_margin="@dimen/margins"
                        android:elevation="4dp"
                        app:cardCornerRadius="@dimen/margins">


                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/imagePostExp"
                            android:layout_width="@dimen/meme_templete_std_height"
                            android:layout_height="@dimen/meme_templete_std_height"
                            android:layout_centerInParent="true" />


                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/timestamp_exp"
                        style="@style/timestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_margin="@dimen/margins"
                        android:text="@{random.lastUpdated}" />

                    <!--                Style Picker-->
                    <!--                    <LinearLayout-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_margin="@dimen/margins"-->
                    <!--                        android:orientation="horizontal">-->

                    <!--                        <com.google.android.material.textview.MaterialTextView-->
                    <!--                            android:id="@+id/choose_color"-->
                    <!--                            android:layout_width="wrap_content"-->
                    <!--                            android:layout_height="wrap_content"-->
                    <!--                            android:layout_margin="@dimen/margins"-->
                    <!--                            android:text="@string/choose_color" />-->

                    <!--                        <com.google.android.material.textview.MaterialTextView-->
                    <!--                            android:id="@+id/choose_font"-->
                    <!--                            android:layout_width="wrap_content"-->
                    <!--                            android:layout_height="wrap_content"-->
                    <!--                            android:layout_margin="@dimen/margins"-->
                    <!--                            android:text="@string/choose_font" />-->
                    <!--                    </LinearLayout>-->


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margins"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/lineAddedEt"
                            android:layout_width="@dimen/add_line"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margins"
                            android:layout_marginTop="4dp"
                            android:hint="@string/add_a_line"
                            android:maxLines="4"
                            android:minLines="1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <requestFocus />
                        </EditText>


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/send_post_edit"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="end"
                            android:background="@drawable/ic_send"
                            android:enabled="false"
                            app:layout_constraintEnd_toEndOf="parent" />


                    </RelativeLayout>

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/auto_completeTag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margins"
                        android:layout_marginTop="@dimen/margins"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/add_a_tag" />

                    <RelativeLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/item_swipe_left_indicator"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentStart="true"
                            android:layout_margin="10dp"
                            android:alpha="0"
                            android:background="#A5F" />

                        <View
                            android:id="@+id/item_swipe_right_indicator"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="10dp"
                            android:alpha="0"
                            android:background="#A5F" />
                    </RelativeLayout>
                </LinearLayout>


            </ScrollView>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>
