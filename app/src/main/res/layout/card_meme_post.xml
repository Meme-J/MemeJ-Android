<!--This is the standard Card for meme World and my memes-->

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_home_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margins"
    android:elevation="48dp"
    app:cardCornerRadius="@dimen/margins">

    <LinearLayout
        android:id="@+id/parent_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/cv_post"
                android:layout_width="match_parent"
                android:layout_height="@dimen/meme_templete_std_height"
                android:layout_margin="@dimen/margins"
                android:src="@drawable/test_image" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/meme_timestamp"
                style="@style/timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_post"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/margins"
                android:text="@string/time" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <ImageView
                android:id="@+id/like_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_like_empty" />

            <TextView
                android:id="@+id/post_likes_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:gravity="center"
                android:text="0"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
