<?xml version="1.0" encoding="utf-8"?>

<!--//Create a data class to store this as well-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:layout_marginBottom="56dp">

    <!--    /Image View For Profile-->

    <androidx.cardview.widget.CardView
        android:id="@id/cv"
        android:layout_width="@dimen/image_profile_attr"
        android:layout_height="@dimen/image_profile_attr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margins"
        app:cardCornerRadius="60dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/avatar_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/male" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/edit_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margins"
        android:text="@string/choose_your_avatar" />

    <View
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/edit_avatar"
        android:layout_margin="@dimen/margins"
        android:background="@color/black" />

    <!--    //Reference View-->
    <View
        android:id="@+id/ref"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/l1"
        android:layout_centerHorizontal="true"
        android:foregroundGravity="center" />

    <TextView
        android:id="@+id/number_memes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l1"
        android:layout_alignEnd="@id/ref"
        android:layout_marginEnd="32dp"
        android:fontFamily="serif"
        android:text="12"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/number_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l1"
        android:layout_alignStart="@id/ref"
        android:layout_marginStart="32dp"
        android:fontFamily="serif"
        android:text="10"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvtm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/number_memes"
        android:layout_alignEnd="@id/ref"
        android:layout_margin="@dimen/margins"
        android:text="@string/total_memes" />

    <TextView
        android:id="@+id/tvtl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/number_likes"
        android:layout_alignStart="@id/ref"
        android:layout_margin="@dimen/margins"
        android:text="@string/total_likes" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/tvtm"
        android:layout_margin="@dimen/margins"
        android:background="@color/black"
        android:padding="@dimen/margins" />


</RelativeLayout>