<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container_select_template"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/garbinaoGrey"
        android:orientation="vertical">


        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/abAdd"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/addMemeTb"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:navigationContentDescription="@string/lines"
                app:title="Select template"
                app:titleTextColor="@color/white" />
        </com.google.android.material.appbar.AppBarLayout>

        <!--        <MultiAutoCompleteTextView-->
        <!--            android:id="@+id/etSearchMemeTemplate"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginStart="@dimen/margins"-->
        <!--            android:layout_marginTop="?attr/actionBarSize"-->
        <!--            android:layout_marginEnd="@dimen/margins"-->
        <!--            android:hint="@string/search_hint"-->
        <!--            android:paddingStart="@dimen/card_eleveation_max"-->
        <!--            android:paddingTop="12dp"-->
        <!--            android:paddingEnd="@dimen/card_eleveation_max" />-->


        <ProgressBar
            android:id="@+id/pb_template"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/card_half"
            android:visibility="gone" />


        <androidx.cardview.widget.CardView
            android:id="@+id/activityCatalogSearchContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/space"
            app:cardBackgroundColor="@color/stoneWhite"
            app:cardCornerRadius="@dimen/space_half">


            <SearchView
                android:id="@+id/activityTemplateSearch"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/stoneWhite"
                android:iconifiedByDefault="false"
                android:padding="@dimen/space"
                android:queryHint="Search" />

            <!--                <com.miguelcatalan.materialsearchview.MaterialSearchView-->
            <!--                    android:id="@+id/search_view_lib"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="wrap_content" />-->


        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_memeGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margins"
            android:layout_marginEnd="@dimen/margins" />


    </LinearLayout>
</layout>