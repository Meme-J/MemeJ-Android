<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/card_home_view"
    android:layout_margin="@dimen/margins"
    android:layout_height="wrap_content"
    android:elevation="48dp"
    app:cardCornerRadius="@dimen/margins">

    <LinearLayout
        android:id="@+id/parent_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/cv_editMemePostHome"
                android:layout_width="match_parent"
                android:layout_height="@dimen/meme_templete_std_height"
                android:src="@drawable/test_image" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/home_meme_timestamp"
                style="@style/timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_editMemePostHome"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/margins"
                android:text="@string/time" />

        </RelativeLayout>


    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
