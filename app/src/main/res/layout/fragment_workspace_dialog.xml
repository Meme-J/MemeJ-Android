<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.WorkspaceDialogFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--                <TextView-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_margin="@dimen/margins"-->
                <!--                    android:gravity="center"-->
                <!--                    android:text="@string/myWspc"-->
                <!--                    android:textSize="@dimen/text_size" />-->

                <!--                View for global workspace-->
                <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margins"
                    android:layout_marginBottom="@dimen/space">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/workspace_dialog_image_view"
                        android:layout_width="@dimen/space_8x"
                        android:layout_height="@dimen/space_8x"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_margin="@dimen/margins"
                        android:src="@drawable/circle_logo"
                        app:cardCornerRadius="@dimen/space_4x"
                        app:civ_border_color="@color/colorPrimary"
                        app:civ_border_width="1.5dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/circle_logo" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margins"
                        android:gravity="center"
                        android:paddingStart="@dimen/space"
                        android:text="@string/global_space"
                        android:textSize="24sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/workspace_dialog_image_view" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_dialog_workspaces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margins"
                    android:scrollbars="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_dialog_workspace_list" />

                <LinearLayout
                    android:id="@+id/ll_addWorkspace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margins"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/margins">

                    <ImageView
                        android:layout_width="@dimen/space_4x"
                        android:layout_height="@dimen/space_4x"
                        android:src="@drawable/ic_add" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_workspace"
                        android:textSize="24sp" />

                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</layout>
