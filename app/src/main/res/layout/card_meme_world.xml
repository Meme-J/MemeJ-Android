<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_home_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margins"
    android:elevation="48dp"
    app:cardCornerRadius="@dimen/margins">

    <LinearLayout
        android:id="@+id/parent_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/loadingPanel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

            <com.example.memej.textProperties.lib.ImageEditorView
                android:id="@+id/photoViewMemeWorld"
                android:layout_width="@dimen/meme_templete_std_height"
                android:layout_height="@dimen/meme_templete_std_height"
                android:layout_centerInParent="true" />
            <!--            <com.google.android.material.imageview.ShapeableImageView-->
            <!--                android:id="@+id/cv_post"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="@dimen/meme_templete_std_height"-->
            <!--                android:src="@drawable/test_image" />-->

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/meme_timestamp"
                style="@style/timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/photoViewMemeWorld"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="@dimen/margins"
                android:text="@string/time" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.like.LikeButton
                android:id="@+id/starBtnMeme"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/margins"
                android:elevation="18dp"
                app:icon_size="10dp"
                app:icon_type="heart" />

            <TextView
                android:id="@+id/num_likes_memeAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/margins"
                android:layout_marginBottom="@dimen/margins"
                android:text="@string/_0"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
