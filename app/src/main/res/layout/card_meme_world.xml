<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margins"
    android:background="@color/white">

    <!--    A timestamp, and an image-->

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/meme_worl_height"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/margins">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/memeWorld_image"
            android:layout_width="@dimen/meme_world_width"
            android:layout_height="@dimen/meme_worl_height"
            android:layout_gravity="center"
            android:src="@drawable/test_image" />


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/memeWorldTimeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/cv"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/margins"
        android:text="@string/sample_timestamp"
        android:textColor="@color/black" />


</RelativeLayout>
