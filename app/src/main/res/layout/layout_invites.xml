<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_half">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_invite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/space_half">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_workspace_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_half"
                android:maxLines="2"
                android:minLines="1"
                android:padding="@dimen/space_half"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@tools:sample/full_names" />


            <TextView
                android:id="@+id/tv_workspace_sender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_half"
                android:minLines="1"
                android:padding="@dimen/space_half"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_workspace_name"
                tools:text="@tools:sample/full_names" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_workspace_sender">

                <ImageView
                    android:id="@+id/iv_accept_request"
                    android:layout_width="@dimen/space_5x"
                    android:layout_height="@dimen/space_5x"
                    android:elevation="@dimen/space_half"
                    android:src="@drawable/ic_check_black_24dp"
                    app:layout_constraintEnd_toStartOf="@id/iv_reject_request"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_reject_request"
                    android:layout_width="@dimen/space_5x"
                    android:layout_height="@dimen/space_5x"
                    android:elevation="@dimen/space_half"
                    android:src="@drawable/ic_clear_black_24dp"
                    android:tint="@color/navRed"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_accept_request"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>