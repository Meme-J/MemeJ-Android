<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/container_layout_tag"
    android:layout_marginEnd="@dimen/margins"
    android:elevation="@dimen/card_half"
    app:cardBackgroundColor="@color/teal_50"
    app:cardCornerRadius="@dimen/space_2x">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/getTagName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margins"
            android:text="@string/val" />

        <ImageView
            android:id="@+id/getTagCross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margins"
            android:src="@drawable/ic_cancel" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>