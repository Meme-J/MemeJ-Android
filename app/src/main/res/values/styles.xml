<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="useMaterialThemeColors">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorDimBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>

    </style>


    <style name="LoginSignUp" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorDimBlack</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Containertheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/colorDimBlack</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:screenOrientation">portrait</item>

    </style>

    <style name="timestamp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="color">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--    Arial Style-->
    <style name="arial_font">
        <item name="fontFamily">@font/arial</item>
    </style>

    <style name="bomb_font">
        <item name="fontFamily">@font/bomb_font</item>
    </style>

    <style name="long_fox_font">
        <item name="fontFamily">@font/long_fox_font</item>
    </style>

    <style name="robot_reavers_font">
        <item name="fontFamily">@font/romot_reavers_font</item>
    </style>

    <style name="fonty_fonts">
        <item name="fontFamily">@font/fonty_font</item>
    </style>


    <style name="buttonMaterialStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">@dimen/btn_size</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">@dimen/margins</item>
        <item name="android:focusable">true</item>
        <item name="android:radius">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
